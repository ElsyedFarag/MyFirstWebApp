@using Microsoft.AspNetCore.Identity
@using MyShop.Entities.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {

        if (UserManager.GetUserAsync(User).Result.PictureProfile != null)
        {
            <li class="nav-item">
                <img class="rounded-circle" src="data:image/*;base64,@(Convert.ToBase64String(UserManager.GetUserAsync(User).Result.PictureProfile))" style="height:48px;width:48px;object-fit:cover" />
            </li>
        }
        else
        {
            <li class="nav-item">
                <img class="rounded-circle" src="~/Images//user-phpto.png" style="height:48px;width:48px;object-fit:cover"/>
            </li>
        }
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserAsync(User).Result.Name!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline"  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Customer", new { area = "Customer" })">
                <button id="logout" type="submit"  class="nav-link btn btn-link text-dark border-0">Logout</button>
            </form>
        </li>
    }
    else
    {

        <li class="nav-item">
            <a class="nav-link text-dark" style="background-color:none" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>

    }
</ul>
