@model IEnumerable<Catigory>
@{
    ViewBag.BlankTitle = "Catigory Management";
    ViewBag.CardTitle = "List Of Categories";
}
<div>
    <a asp-controller="Catigory" asp-action="CreateCatigory" class="btn btn-primary"> Create </a>
</div>

<div class="card-body p-0">
    <table class="table table-striped projects">
        <thead>
            <tr>
                <th style="width: 1%">
                    Id
                </th>
                <th style="width: 20%">
                    Catigory Name
                </th>
                <th style="width: 20%">
                    Date Created
                </th>
                <th style="width: 30%">
                    Description
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.DateCreate
                        </td>
                        <td>
                           @Html.Raw(item.Description)

                        </td>

                        <td class="project-actions text-right">
                            <a class="btn btn-primary btn-sm" href="/Admin/Catigory/Details/@item.Id">
                                <i class="fas fa-folder">
                                </i>
                                View
                            </a>
                            <a class="btn btn-info btn-sm" href="/Admin/Catigory/Edit/@item.Id">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Edit
                            </a>
                            <a class="btn btn-danger btn-sm" href="/Admin/Catigory/Delete/@item.Id#">
                                <i class="fas fa-trash">
                                </i>
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>