@{
    ViewBag.BlankTitle = "Product Management";
    ViewBag.CardTitle = "List Of Products";
}
<div style="margin-bottom:15px">
    <a asp-controller="Product" asp-action="Create" class="btn btn-primary"> Create </a>
</div>


<table id="mytable" style="width:100%" class="table table-hover">
    <thead>
        <tr>
            <th style="width: 5%">
                Id
            </th>
            <th style="width: 15%">
                Product Name
            </th>
            <th style="width: 10%">
                $Price
            </th>
            <th style="width: 15%">
                $Before Price
            </th>
            <th style="width: 20%">
                Description
            </th>
            <th style="width:10%">
                Catigory
            </th>
            <th style="width:30%">
            </th>
        </tr>
    </thead>
</table>

@section Scripts {
    <script src="~/js/product.js"></script>
}