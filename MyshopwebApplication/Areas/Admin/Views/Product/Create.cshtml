@model ProductVm

@{
    ViewBag.BlankTitle = "Product Management";
    ViewBag.CardTitle = "Create Product";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            
            <div class="form-group">
                <label asp-for="product.Name" class="control-label"></label>
                <input asp-for="product.Name" class="form-control" />
                <span asp-validation-for="product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.Description" class="control-label"></label>
                <textarea id="textarea" asp-for="product.Description" class="form-control"></textarea>
                <span asp-validation-for="product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.Price"  class="control-label"></label>
                <input asp-for="product.Price" class="form-control" />
                <span asp-validation-for="product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.BeforePrice" class="control-label"></label>
                <input asp-for="product.BeforePrice" class="form-control" />
                <span asp-validation-for="product.BeforePrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label  class="control-label">Image</label>
                <input asp-for="product.Img" type="file" name="file" id="imgfile" class="form-control" onchange="fillimg(event)" />
                <span asp-validation-for="product.Img" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="product.CatigoryId"></label>
                <select asp-for="product.CatigoryId" asp-items="Model.CatigoryList" class="form-control">
                    <option disabled selected>-- Select Catigory --</option>
                </select>
                <span asp-validation-for="product.CatigoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-warning">Back to List</a>

            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="container">
            <img src=""
                 style="
                  width: 400px;
                  height: 400px;
                  margin-top: 50px;
                  margin-left: 200px;" id="ImagePrevce" />
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        tinymce.init({
            selector: 'textarea',
        });
        var fillimg = function (event) {
            var imgholder = document.getElementById("ImagePrevce");
            imgholder.src = URL.createObjectURL(event.target.files[0]);
        }
    </script>
}
