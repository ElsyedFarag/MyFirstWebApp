@model MyShop.Entities.ViewModel.OrderVM

@{

    ViewBag.BlankTitle = "Orders Management";
    ViewBag.CardTitle = "View Order Details";
}

<form method="post" asp-action="OrderUpdate">
    <div class="container">
        <div>
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-12 col-lg-6 pb-4">
                        <div class="row">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span>PickUp Details</span>
                            </h4>
                        </div>
                        <input hidden asp-for="OrderHeader.Id" />
                        <div class="row my-1">
                            <div class="col-4">Name</div>
                            <div class="col-8">
                                <input type="text" class="form-control" asp-for="OrderHeader.Name" />
                                <span class="text-danager"></span>
                            </div>
                        </div>
                        <div class="row my-1">
                            <div class="col-4">Phone</div>
                            <div class="col-8">
                                <input type="text" class="form-control" asp-for="OrderHeader.PhoneNumber" />
                                <span class="text-danager"></span>
                            </div>
                        </div>
                        <div class="row my-1">
                            <div class="col-4">Address</div>
                            <div class="col-8">
                                <input type="text" class="form-control" asp-for="OrderHeader.Address" />
                                <span class="text-danager"></span>
                            </div>
                        </div>

                        <div class="row my-1">
                            <div class="col-4">City</div>
                            <div class="col-8">
                                <input type="text" class="form-control" asp-for="OrderHeader.City" />
                                <span class="text-danager"></span>
                            </div>
                        </div>
                        <div class="row my-1">
                            <div class="col-4">Email</div>
                            <div class="col-8">
                                <input type="text" class="form-control" asp-for="OrderHeader.ApplicationUser.Email" disabled />
                                <span class="text-danager"></span>
                            </div>
                        </div>
                        <div class="row my-1">
                            <div class="col-4">Order Date</div>
                            <div class="col-8">
                                <input type="text" class="form-control" asp-for="OrderHeader.OrderDate" value="@Model.OrderHeader.OrderDate.ToShortDateString()" />
                                <span class="text-danager"></span>
                            </div>
                        </div>
                        <div class="row my-1">
                            <div class="col-4">Carrier</div>
                            <div class="col-8">
                                <input type="text" id="carrier" class="form-control" asp-for="OrderHeader.Carrier" />
                                <span class="text-danager"></span>
                            </div>
                        </div>
                        <div class="row my-1">
                            <div class="col-4">Tracking Number</div>
                            <div class="col-8">
                                <input type="text" id="tarack" class="form-control" asp-for="OrderHeader.TrackingNumber" />
                                <span class="text-danager"></span>
                            </div>
                        </div>
                        <div class="row my-1">
                            <div class="col-4">Shipping Date</div>
                            <div class="col-8">
                                <input type="text" class="form-control" asp-for="OrderHeader.ShippingDate" value="@Model.OrderHeader.OrderDate.ToShortDateString()" />
                                <span class="text-danager"></span>
                            </div>
                        </div>
                        <div class="row my-1">
                            <div class="col-4">Session Id</div>
                            <div class="col-8">
                                <input type="text" class="form-control" asp-for="OrderHeader.SessionId" disabled />
                                <span class="text-danager"></span>
                            </div>
                        </div>
                        <div class="row my-1">
                            <div class="col-4">Payment Intent Id</div>
                            <div class="col-8">
                                <input type="text" class="form-control" asp-for="OrderHeader.PaymentIntentId" disabled />
                                <span class="text-danager"></span>
                            </div>
                        </div>
                        <div class="row my-1">
                            <div class="col-4">Payment Date</div>
                            <div class="col-8">
                                <input type="text" class="form-control" asp-for="OrderHeader.PaymentPay" value="@Model.OrderHeader.PaymentPay.ToShortDateString()" />
                                <span class="text-danager"></span>
                            </div>
                        </div>
                        <div class="row my-1">
                            <div class="col-4">Order Status</div>
                            <div class="col-8">
                                <input type="text" class="form-control" asp-for="OrderHeader.OrderStatus" />
                                <span class="text-danager"></span>
                            </div>
                        </div>
                        <div class="row my-1">
                            <div class="col-4">Payment Status</div>
                            <div class="col-8">
                                <input type="text" class="form-control" asp-for="OrderHeader.PaymentStatus" />
                                <span class="text-danager"></span>
                            </div>
                        </div>
                        <input type="submit" asp-action="OrderUpdate" class="btn btn-primary form-control my-1" value="Update Pickup Detail" />
                    </div>
                    <div class="col-12 col-lg-5 offset-lg-1">
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span>Order Summary</span>
                        </h4>
                        <label class="btn btn-outline-primary form-control my-1">Order Status - @Model.OrderHeader.OrderStatus</label>
                        <ul class="list-group mb-3">
                            @foreach (var item in Model.OrderDetail)
                            {
                                <li class="list-group-item d-flex justify-content-between p-2">
                                    <div class="row container">
                                        <div class="col-8">
                                            <h6 class="my-0 text-primary">@item.Product.Name</h6>
                                            <small class="text-auted">Price : $@item.Product.Price </small><br />
                                            <small class="text-auted">Quantity : @item.Count </small><br />
                                        </div>
                                        <div class="col-4 text-end">
                                            <p class="text-success">@((item.Product.Price * item.Count).ToString("c"))</p>
                                        </div>
                                    </div>
                                </li>

                            }
                            <li class="list-group-item bg-dark">
                                <div class="row container">
                                    <div class="col-6">
                                        <h5 class="text-white">TOTAL</h5>
                                    </div>
                                    <div class="col-6 text-end">
                                        <h5 class="text-white">@Model.OrderHeader.TotalPrice.ToString("c")</h5>
                                    </div>
                                </div>
                            </li>
                        </ul>
                        @if (Model.OrderHeader.OrderStatus == "Approve")
                        {
                            <input asp-action="StartProcs" type="submit" class="btn btn-primary" value="Start Processing" />
                        }
                        @if (Model.OrderHeader.OrderStatus == "Processing")
                        {
                            <input asp-action="StartShip" type="submit" onclick="return CheckData()" class="btn btn-success" value="Start Shipping" />
                        }
                        @if (Model.OrderHeader.OrderStatus != "Cancelled" || Model.OrderHeader.OrderStatus != "Refund")
                        {
                            <input type="submit" asp-action="CancelOrder" class="btn btn-danger" value="Cancel Order" />
                        }
                    </div>

                </div>
            </div>
</form>
@section scripts {
    <script>
        function CheckData() {
            if (document.getElementById("carrier").value == '') {
                Swal.fire({
                    title: "There is an error",
                    text: "Please Enter Carrier Number!",
                    icon: "error",
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                });

                return false;
            }
            if (document.getElementById("tarack").value == '') {
                Swal.fire({
                    title: "There is an error",
                    text: "Please Enter Tracking Number!",
                    icon: "error",
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                });


                return false;
            }
            return true;
        }
    </script>
}

